#ajuste de temperatura
temp=int(input("Ingrese temperatura actual: "))
if temp < tempReq: #se tiene que incrementar la temperatura tempReq-temp veces
    for i in range(tempReq-temp):
        devices[0].send_data(s24)
        time.sleep(4)
    print("Se ha subido",tempReq-temp,"Â° la temperatura")
elif temp > tempReq:  #se tiene que disminuir la temperatura temp-tempReq veces
    for i in range(temp-tempReq):
        devices[0].send_data(b21)
        time.sleep(4)
    print("Se ha disminuido",temp-tempReq,"Â° la temperatura")
else:
    print("Temperatura de LST (IDEAL)")

